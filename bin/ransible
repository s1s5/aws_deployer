#!/bin/bash
# -*- mode: shell-script -*-

source `which virtualenvwrapper.sh`
workon deployer

# set -eu  # <= 0以外が返るものがあったら止まる, 未定義の変数を使おうとしたときに打ち止め

script_dir=$(cd $(dirname ${BASH_SOURCE:-$0}); pwd)
pushd `pwd`
cd ${script_dir}/..

declare -a args
for a in $@;do
    args=("${args[@]}" $a)
done


hosts=${args[0]}
for ((i = 1; i < ${#args[@]}; i++)) {
        hosts="${hosts},${args[i]}"
}

fab -f fabfile.py -H ${hosts} install_default_packages create_swap

if [ $# == 1 ]; then
    hosts=${hosts},
fi
ansible-playbook -i ${hosts} ansible/site.yml --extra-vars "ansible_python_interpreter=/usr/bin/python2.7" -K

echo "restarting all hosts ...."
for ((i = 0; i < ${#args[@]}; i++)) {
    ssh ${args[i]} sudo reboot &> /dev/null
}

for ((i = 0; i < ${#args[@]}; i++)) {
    while :
    do
        sleep 1
        ssh ${args[i]} true &> /dev/null
        if [ $? == 0 ]; then
            break
        fi
    done
}
echo "finished!!"

deactivate
popd
